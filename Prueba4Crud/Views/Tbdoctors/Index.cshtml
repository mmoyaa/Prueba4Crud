@model IEnumerable<Prueba4Crud.Models.Tbdoctor>

@{
    ViewData["Title"] = "Index";
}

<h1>Tabla Doctores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar</a>
    @*<a asp-action="Create">Agregar Doctor</a>*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Convenio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCita)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Convenio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCita)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.IdDoctor">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdDoctor">Detalle</a> |
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.IdDoctor">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
